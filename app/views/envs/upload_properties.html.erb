<!DOCTYPE html>
<html>
<head>
  <title>Apposs</title>
  <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <fieldset>
    <legend>上传当前环境的配置文件</legend>
    <%=form_for @env, :html => { :multipart => true } do |f| %>
      <%=f.hidden_field :id %>
      <%=f.file_field :property_file %>
      <%=f.submit '提交' %>
    <% end %>
  </fieldset>
  <fieldset>
    <legend>修改当前环境的配置信息</legend>
    <%=form_for @env do |f| %>
      <%=f.hidden_field :id %>
      <%=f.text_area :property_content %>
      <br />
      <%=f.submit '提交' %>
    <% end %>
  </fieldset>
</body>
</html>

