    var nsMachineRoom = {}
    nsMachineRoom.PAGE_SIZE = 50;
    //机器Model
    Ext.define('Machine', {
        extend:'Ext.data.Model',
        fields:['id','name','host','room_id','app_id'],
        proxy:{
            type:'ajax',
            url:"<%= admin_machines_path %>",
            reader:{
                type:'json',
                totalProperty:'totalCount',
                root:'machines'
            },
            extraParams: {
                authenticity_token:$('meta[name="csrf-token"]').attr('content')
            }
        }
    });

    //机器的GridPanel Store
