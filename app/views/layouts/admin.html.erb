        pageSize:nsMachineRoom.PAGE_SIZE,
        model:Machine
    });

    //机房Model
    Ext.define('Room', {
        extend:'Ext.data.Model',
        fields:['id','name'],
        proxy:{
            type:'ajax',
            url:"<%= admin_rooms_path %>",
            reader:{
                type:'json',
                totalProperty:'totalCount',
                root:'rooms'
            }
        }
    });
    //应用Model
    Ext.define('MachineApp', {
