    }

    var machinePanelRowEditing = Ext.create('Ext.grid.plugin.RowEditing', {
        clicksToEdit: 1
    });
    var roomPanelRowEditing = Ext.create('Ext.grid.plugin.RowEditing', {
        clicksToEdit: 1
    });

</script>
