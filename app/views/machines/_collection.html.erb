<h2>
  服务器列表，共<%=parent.machines.count %>台
  <%=link_to '刷新', app_machines_path(parent.id), :remote => true %>
  <%=link_to '重新获取', reload_machines_app_path(parent.id), :remote => true %>
</h2>
<ul class="list" style="height:200px; overflow-y:auto">
  <li><label>
    <a href="javascript:void 0;" select="all">全选</a>
    <a href="javascript:void 0;" select="none">清除</a>
  </label>
  </li>
  <% parent.machines.each{|machine|%>
  <li>
    <label title="<%=machine.name %>" style="weight:140px">
      <input type="checkbox" name="machine_ids[]" value="<%=machine.id %>">
      <%=machine.name[0..10] %>
    </label>
    <%=show_state machine %>
    <div style="clear:both"></div>
  </li>
  <% }%>
</ul>

