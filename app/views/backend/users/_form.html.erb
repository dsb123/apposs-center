<table>
<%= form_for(resource,
      :as => "#{resource_instance_name.to_s.downcase}",
      :url => resource.new_record? ? collection_url : resource_url(resource),
      :html => { :method => (resource.new_record? ? "post" : "put") }) do |f| %>
  <% if resource.errors.any? %>
  <div class="errors" style="padding:8px">
      <ul>
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
  </div>
  <% end %>
  <tr>
    <td><%= resource_class.human_attribute_name :email %></td>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <td><%= resource_class.human_attribute_name :password %></td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td colspan="2"><%= f.submit %></td>
  </tr>
<% end %>
</table>
