  <legend>新增角色</legend>
  <%= form_for(resource,
      :as => "#{resource_instance_name.to_s.downcase}",
      :url => resource.new_record? ? collection_url : resource_url(resource),
      :html => { :method => (resource.new_record? ? "post" : "put") },
      :remote => true) do|f| %>
    <div class="errors" style="padding:8px"></div>
    <table>
      <tr>
        <td class="label">用户帐号（注册邮箱）</td>
        <td class="value"><%=f.text_field :email %></td>
      </tr>
      <tr>
        <td class="label">用户角色</td>
        <td class="value"><%=f.select :role_name, %w{PE AppOPS} %></td>
      </tr>
      <tr>
        <td cols="2">
          <%=f.submit '提交' %>
          <input type="reset" value="取消"
            onclick="$('#main_list fieldset').fadeOut(100);" />
        </td>
      </tr>
    </table>
  <% end %>

