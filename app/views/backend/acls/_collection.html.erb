<div id="sub_list">
  <fieldset style="display:none"></fieldset>
  <h2>
    <%=App.find(params[:app_id]).name %> 权限设定 <%=link_to "单击添加", new_resource_path, :remote => true %>
  </h2>
  <table class="list">
  <thead>
    <tr>
      <th width="30%">用户</th>
      <th width="20%">角色</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
  <% collection.each do |resource| %>
    <tr>
      <td><%=resource.user.email %></td>
      <td><%=resource.role.name %></td>
      <td align="right">
        <%=link_to "删除", resource_path(resource.id), :remote => true, :method => :delete, :confirm => "确实要删除吗？" %>
      </td>
    </tr>
  <% end %>
  </tbody>
  </table>
</div>
