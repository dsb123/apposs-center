<% if resource.errors.count > 0 %>
  $("#sub_list fieldset").
    find("div.errors").
    html('<ul class="errors"><%=raw resource.errors.to_a.collect{|msg| content_tag :li, msg}.join %></ul>');
<% else %>
  $('#main_list fieldset').
    html('<%= escape_javascript(render 'collection', :collection => resource.resource.acls) %>').
    slideDown(500);
<% end %>
