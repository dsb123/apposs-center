<% if @errors.count > 0 %>
  $("#zone").
    find("div.errors").
    html('<ul class="errors">导入已完成。下列指令导入失败——<%=raw @errors.collect{|msg| content_tag :li, msg}.join %></ul>');
<% else %>
$("#zone").html('<%= escape_javascript(
  render 'collection', :collection => @directive_templates
) %>');
alert("导入完毕!");
<% end %>

