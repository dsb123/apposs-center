<div id="directives">
  <h2>指令列表</h2>
  <ul class="list">
  <% collection.each do |directive|%>
    <li>
      <span style="float:left;color:green;width:50px"><%=directive.id %></span>
      <span style="float:left" title="<%=directive.command_name %>">
        <%=directive.command_name[0..80] %>
      </span>
      <span style="float:right">
        <%=directive.human_state_name %>
      </span>
      <div style="clear:both" />
    </li>
  <% end %>
  </ul>
</div>

